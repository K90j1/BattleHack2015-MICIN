<h1>ログの一覧</h1>

<table class="table table-striped">
	<thead>
	<tr>
		<th><%= t(:Type) %></th>
		<th><%= t(:Log) %></th>
		<th><%= t(:Resolve) %></th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	<% @logs.each do |log| %>
		<tr>
			<td><%= link_to log.type, static_pages_details_path(id:log.id) %></td>
			<td><%= truncate(log.log, :length=>100) %></td>
			<td><%= log.resolve %></td>
			<td><%= link_to t(:Show), log %></td>
		</tr>
	<% end %>
	</tbody>
</table>
<br>
