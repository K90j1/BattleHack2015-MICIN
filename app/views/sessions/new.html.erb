<% provide(:title, "Sign in") %>
<h1>サインイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, :url=> sessions_path) do |f| %>

      <%= f.label :"名前" %>
      <%= f.text_field :name %>

      <%= f.label :"パスワード" %>
      <%= f.password_field :password %>

      <%= f.submit "サインイン", :class=> "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
