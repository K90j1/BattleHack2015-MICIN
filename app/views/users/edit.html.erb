<% provide(:title, "Edit user") %>
<h1>ログイン情報を更新する</h1>

<div class="row">
  <div class="span6 offset3">
  <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', :object=> f.object %>

      <%= f.label 'なまえ' %>
      <%= f.text_field :name %>

      <%= f.label 'メールアドレス' %>
      <%= f.text_field :email %>

      <%= f.label 'パスワード' %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, 'パスワードをもう一度' %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit '送信', :class=> "btn btn-large btn-primary" %>
    <% end %>
<br>
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">変更</a>
  </div>
</div>
